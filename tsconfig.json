{
  "include": ["src", "test", "types"],
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "lib",
    "src/.umi/**",
    "fixtures",
    "examples"
  ]
}
